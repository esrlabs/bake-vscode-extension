{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "paths": {
            "@src/*": ["src/*"]
        },
        "sourceMap": true,
        "rootDir": "src",
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/server",
        "node_modules",
        ".vscode-test"
    ],
    "references": [
        { "path": "./src/server" }
    ]
}